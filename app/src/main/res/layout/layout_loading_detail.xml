<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".25"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".75"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgBackdrop"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPoster"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="120dp"
        android:layout_marginStart="16dp"
        app:cardBackgroundColor="@color/colorPrimaryLight"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="@id/imgBackdrop"
        app:layout_constraintStart_toStartOf="@id/imgBackdrop"/>

    <View
        android:id="@+id/viewOne"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintTop_toBottomOf="@id/imgBackdrop"
        app:layout_constraintStart_toEndOf="@id/cardPoster"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/viewTwo"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintTop_toBottomOf="@id/viewOne"
        app:layout_constraintStart_toStartOf="@id/viewOne"
        app:layout_constraintEnd_toEndOf="@id/guidelineThree"/>

    <View
        android:id="@+id/viewThree"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintTop_toBottomOf="@id/viewTwo"
        app:layout_constraintStart_toStartOf="@id/viewOne"
        app:layout_constraintEnd_toEndOf="@id/guidelineTwo"/>

    <View
        android:id="@+id/viewFour"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintTop_toBottomOf="@id/cardPoster"
        app:layout_constraintStart_toStartOf="@id/cardPoster"
        app:layout_constraintEnd_toEndOf="@id/guidelineOne"/>

    <View
        android:id="@+id/viewFive"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintTop_toBottomOf="@id/viewFour"
        app:layout_constraintStart_toStartOf="@id/viewFour"
        app:layout_constraintEnd_toEndOf="@id/viewFour"/>

    <View
        android:id="@+id/viewSix"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintTop_toTopOf="@id/viewFour"
        app:layout_constraintStart_toEndOf="@id/guidelineOne"
        app:layout_constraintEnd_toEndOf="@id/guidelineTwo"/>

    <View
        android:id="@+id/viewSeven"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintTop_toBottomOf="@id/viewSix"
        app:layout_constraintStart_toStartOf="@id/viewSix"
        app:layout_constraintEnd_toEndOf="@id/viewSix"/>

    <View
        android:id="@+id/viewEight"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintTop_toTopOf="@id/viewFour"
        app:layout_constraintStart_toEndOf="@id/guidelineTwo"
        app:layout_constraintEnd_toEndOf="@id/guidelineThree"/>

    <View
        android:id="@+id/viewNine"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintTop_toBottomOf="@id/viewEight"
        app:layout_constraintStart_toStartOf="@id/viewEight"
        app:layout_constraintEnd_toEndOf="@id/viewEight"/>

    <View
        android:id="@+id/viewTen"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintTop_toTopOf="@id/viewFour"
        app:layout_constraintStart_toEndOf="@id/guidelineThree"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/viewEleven"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintTop_toBottomOf="@id/viewTen"
        app:layout_constraintStart_toStartOf="@id/viewTen"
        app:layout_constraintEnd_toEndOf="@id/viewTen"/>

    <View
        android:id="@+id/viewTwelve"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintTop_toBottomOf="@id/viewFive"
        app:layout_constraintStart_toStartOf="@id/cardPoster"
        app:layout_constraintEnd_toEndOf="@id/guidelineOne"/>

    <View
        android:id="@+id/viewThirteen"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintTop_toBottomOf="@id/viewTwelve"
        app:layout_constraintStart_toStartOf="@id/viewTwelve"
        app:layout_constraintEnd_toEndOf="@id/viewOne"/>

    <View
        android:id="@+id/viewFourteen"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintTop_toBottomOf="@id/viewThirteen"
        app:layout_constraintStart_toStartOf="@id/viewTwelve"
        app:layout_constraintEnd_toEndOf="@id/guidelineThree"/>

    <View
        android:id="@+id/viewFifteen"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintTop_toBottomOf="@id/viewFourteen"
        app:layout_constraintStart_toStartOf="@id/cardPoster"
        app:layout_constraintEnd_toEndOf="@id/guidelineOne"/>

    <View
        android:id="@+id/viewSixteen"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintTop_toBottomOf="@id/viewFifteen"
        app:layout_constraintStart_toStartOf="@id/viewTwelve"
        app:layout_constraintEnd_toEndOf="@id/guidelineTwo"/>

    <View
        android:id="@+id/viewSeventeen"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintTop_toBottomOf="@id/viewSixteen"
        app:layout_constraintStart_toStartOf="@id/cardPoster"
        app:layout_constraintEnd_toEndOf="@id/guidelineOne"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCastOne"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/colorPrimaryLight"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/viewSeventeen"
        app:layout_constraintStart_toStartOf="@id/cardPoster"
        app:layout_constraintEnd_toEndOf="@id/guidelineOne"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCastTwo"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginStart="8dp"
        app:cardBackgroundColor="@color/colorPrimaryLight"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="@id/cardCastOne"
        app:layout_constraintStart_toStartOf="@id/guidelineOne"
        app:layout_constraintEnd_toEndOf="@id/guidelineTwo"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCastThree"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginStart="8dp"
        app:cardBackgroundColor="@color/colorPrimaryLight"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="@id/cardCastOne"
        app:layout_constraintStart_toStartOf="@id/guidelineTwo"
        app:layout_constraintEnd_toEndOf="@id/guidelineThree"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCastFour"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginStart="8dp"
        app:cardBackgroundColor="@color/colorPrimaryLight"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="@id/cardCastOne"
        app:layout_constraintStart_toStartOf="@id/guidelineThree"
        app:layout_constraintEnd_toEndOf="@id/viewOne"/>

</androidx.constraintlayout.widget.ConstraintLayout>